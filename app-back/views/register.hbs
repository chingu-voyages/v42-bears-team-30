<h4>Register</h4>
<div class="container  auth-form-container">
    {{#each errors }}
        <p class="red">{{msg}}</p>
    {{/each}}
    <form action="/auth/register" method="post">
    <div class="input-field col s6">
        <input 
            id="last_name" 
            type="text" 
            class="validate" 
            name="username"
            value="{{#if username }} {{username}} {{else}}{{/if}}"
            >
        <label for="last_name">Username</label>
    </div>
    <div class="input-field col s16">
        <input 
            id="email"
            type="email" 
            class="validate" 
            name="email"
            value="{{#if email }} {{email}} {{else}}{{/if}}"
            >
        <label for="email">Email</label>
    </div>
      <div class="input-field col s6">
        <input 
            id="password" 
            type="password" 
            class="validate" 
            name="password"
            value="{{#if password }} {{password}}{{else}}{{/if}}"
            >
        <label for="password">Password</label>
    </div>
    <div class="input-field col s6">
        <input 
            id="confirm_password" 
            type="password" 
            class="validate" 
            name="confirmPassword"
            value="{{#if confirmPassword }} {{confirmPassword}} {{else}}{{/if}}"
            >
        <label for="confirm_password">Confirm Password</label>
    </div>
    <button class="waves-effect waves-light btn">Register</button>
</form>
</div>