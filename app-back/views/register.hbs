<h4>Register</h4>
<div id="errors">
    

    {{#each errors }}
    
        <div class="err-msg row" id="error-msg-{{id}}">
            <span class="col s11">{{msg}}</span>
            <div id="btn-alert-close" class="button col s1">
                <i class="material-icons">close</i>
            </div>
        </div>
    {{/each}}
</div>



<div class="container  auth-form-container">

    <form action="/auth/register" method="post">
    <div class="input-field col s6">
        <input 
            id="last_name" 
            type="text" 
            class="validate" 
            name="username"
            value="{{#if username }} {{username}} {{else}}{{/if}}"
            >
        <label for="last_name">Username</label>
    </div>
    <div class="input-field col s16">
        <input 
            id="email"
            type="email" 
            class="validate" 
            name="email"
            value="{{#if email }} {{email}} {{else}}{{/if}}"
            >
        <label for="email">Email</label>
    </div>
      <div class="input-field col s6">
        <input 
            id="password" 
            type="password" 
            class="validate" 
            name="password"
            value="{{#if password }} {{password}}{{else}}{{/if}}"
            >
        <label for="password">Password</label>
       
    </div>
    
    <div class="input-field col s6">
        <input 
            id="confirm_password" 
            type="password" 
            class="validate" 
            name="confirmPassword"
            value="{{#if confirmPassword }} {{confirmPassword}} {{else}}{{/if}}"
            >
        <label for="confirm_password">Confirm Password</label>
        <div class="input-field-checkbox col s6">
        <label>
            <input type="checkbox" onclick="toggleTypeInput()"/>
            <span>Show password</span>
        </label>
        </div
    </div>
    
    <button class="waves-effect waves-light btn btn-auth">Register</button>
</form>
</div>