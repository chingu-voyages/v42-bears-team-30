{{> modal}}
<div class="rooms">

    <div class="rooms-content">
        <div class="rooms-content-left">
            <h1>Rooms</h1>
            
        </div>
        <div class="rooms-content-right">
            <button data-target="modal1" class=" btn modal-trigger">+</button>
        </div>
    </div>
    <div class="rooms-list">
        
        <table class="responsive-table highlight">

            <thead>
                <tr>
                    <th>Room number</th>
                    <th>Photos</th>
                    <th>Room description</th>
                    <th>Rent</th>
                    <th>Total guests</th>
                    <th>Availability</th>
                    <th>Booked by</th>
                </tr>
            </thead>

            <tbody>
                {{#each data}}
                <tr>
                    <td>{{roomNumber}}</td>
                    <td>
                        {{#each img}}
                            <img src={{this}} alt="image" />
                        {{/each}}
                    </td>
                    <td>{{description}}</td>
                    <td>{{rent}}</td>
                    <td>{{guest}}</td>
                    <td>{{avalaible}}</td>
                    <td>{{booked}}</td>
                </tr>
                {{/each}}
            </tbody>

      </table>
    </div>

</div>