
<h4>Log In</h4>
{{#if message}}
<div class="err-msg row" id="error-msg">
    <span class="col s11">{{message}}</span>
    <div id="btn-alert-close" class="button col s1">
        <i class="material-icons">close</i>
    </div>
</div>
{{/if}}

{{email}}
<div class="container  auth-form-container">
    <form action="/auth/login" method="post">
        <div class="input-field col s16">
        <input 
            id="email"
            type="email" 
            class="validate" 
            name="email"
            value="{{#if email }} {{email}} {{else}}{{/if}}"
            >
        <label for="email">Email</label>
    </div>
    <div class="input-field col s6">
        <input 
            id="password" 
            type="password" 
            class="validate" 
            name="password"
            value="{{#if password }} {{password}}{{else}}{{/if}}"
            >
        <label for="password">Password</label>
    </div>


    <button class="waves-effect waves-light btn">Log In</button>
</form>
</div>

